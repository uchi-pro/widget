{
  "name": "uchi-widget",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build && mkdir -p ~/git/cdn/widgets/catalog/v$npm_package_version && cp dist/js/app*.js ~/git/cdn/widgets/catalog/v$npm_package_version/uchi-widget.js && cp dist/css/app*.css ~/git/cdn/widgets/catalog/v$npm_package_version/uchi-widget.css && ln -sfn v$npm_package_version ~/git/cdn/widgets/catalog/v1",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^5.9.0",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.10"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
